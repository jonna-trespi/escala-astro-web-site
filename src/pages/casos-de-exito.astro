                  <span class="case-separator-inline"></span>
                </div>
              </div>
            </div>
            
            <!-- 12. Lafise - Sin video ni paper (tipo 4) -->
            <div class="case-item" data-category="finanzas" data-country="nicaragua">
              <div class="case-media">
                <button type="button" class="case-video" data-video-id="s6w5wmV1ZwM" data-video-title="Caso Finanzas">
                  <img src="https://img.youtube.com/vi/s6w5wmV1ZwM/maxresdefault.jpg" alt="Caso de éxito" class="case-video-thumb" />
                  <div class="case-video-overlay"><div class="case-play-btn"><Icon name="play_arrow" size={42} /></div></div>
