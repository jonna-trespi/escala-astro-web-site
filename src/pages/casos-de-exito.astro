<script>
  // Video Modal (YouTube pop-up)
  const videoButtons = document.querySelectorAll('.case-video');
  const videoModal = document.getElementById('videoModal');
  const modalClose = document.getElementById('modalClose');
  const modalOverlay = videoModal?.querySelector('.modal-overlay');
  const modalIframe = document.getElementById('modalIframe') as HTMLIFrameElement | null;

  videoButtons.forEach((button) => {
    button.addEventListener('click', () => {
      const videoId = button.getAttribute('data-video-id');
      if (videoId && modalIframe && videoModal) {
        modalIframe.src = `https://www.youtube.com/embed/${videoId}?autoplay=1&controls=1&modestbranding=1&rel=0`;
        videoModal.classList.add('active');
        document.body.style.overflow = 'hidden';
      }
    });
  });

  function closeVideoModal() {
    if (videoModal && modalIframe) {
      videoModal.classList.remove('active');
      modalIframe.src = '';
      document.body.style.overflow = '';
    }
  }

  modalClose?.addEventListener('click', closeVideoModal);
  modalOverlay?.addEventListener('click', closeVideoModal);
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && videoModal?.classList.contains('active')) closeVideoModal();
  });

  // Textos descriptivos por categoría
  const categoryDescriptions: Record<string, string> = {
    finanzas: 'Innovación financiera sin margen de error. Operación segura, continua y lista para escalar.',
    energia: 'Energía continua, operación crítica. Cuando cada segundo cuenta, la nube no puede fallar.',
    retail: 'Retail de alto volumen en la nube. Infraestructura que escala con la demanda, sin interrupciones.',
    manufactura: 'Manufactura conectada y eficiente. De la planta al cloud: datos, automatización y control en tiempo real.',
    viajes: 'Viajes y hostel: disponibilidad total. Reservas, operación y experiencia de usuario siempre en línea.',
    otras: 'Soluciones cloud para todo tipo de industrias. Escalabilidad, seguridad y operación continua a la medida.'
  };

  function updateCategoryDescription(filter: string | null) {
    const el = document.getElementById('category-description');
    if (el && filter && categoryDescriptions[filter]) {
      el.textContent = categoryDescriptions[filter];
    }
  }

  // Tab filtering
  const tabs = document.querySelectorAll('.cases-tab');
  const caseItems = document.querySelectorAll('.case-item');
  const PER_PAGE = 8;
  let currentPage = 1;

  function applyCategoryFilter(filter: string | null) {
    if (!filter) return;
    caseItems.forEach((item) => {
      if (item.getAttribute('data-category') === filter) {
        item.classList.remove('hidden');
      } else {
        item.classList.add('hidden');
      }
    });
  }

  function getVisibleItems(): Element[] {
    return Array.from(caseItems).filter((item) => !item.classList.contains('hidden'));
  }

  function updatePagination() {
    const visible = getVisibleItems();
    const totalPages = Math.max(1, Math.ceil(visible.length / PER_PAGE));
    currentPage = Math.min(Math.max(1, currentPage), totalPages);

    caseItems.forEach((item) => item.classList.remove('page-hidden'));
    visible.forEach((item, index) => {
      if (index < (currentPage - 1) * PER_PAGE || index >= currentPage * PER_PAGE) {
        item.classList.add('page-hidden');
      }
    });

    const infoEl = document.getElementById('pagination-info');
    const prevBtn = document.getElementById('pagination-prev');
    const nextBtn = document.getElementById('pagination-next');
    if (infoEl) infoEl.textContent = `${currentPage}/${totalPages}`;
    if (prevBtn) (prevBtn as HTMLButtonElement).disabled = currentPage <= 1;
    if (nextBtn) (nextBtn as HTMLButtonElement).disabled = currentPage >= totalPages;

    const paginationEl = document.getElementById('cases-pagination');
    if (paginationEl) paginationEl.style.display = visible.length > PER_PAGE ? 'flex' : 'none';
  }

  // Apply initial filter (active tab on load)
  const initialActiveTab = document.querySelector('.cases-tab.active')?.getAttribute('data-filter');
  applyCategoryFilter(initialActiveTab || 'finanzas');
  updateCategoryDescription(initialActiveTab || 'finanzas');
  updatePagination();

  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      tabs.forEach(t => t.classList.remove('active'));
      tab.classList.add('active');
      const filter = tab.getAttribute('data-filter');
      applyCategoryFilter(filter);
      updateCategoryDescription(filter);
      currentPage = 1;
      updatePagination();
    });
  });

  // Country dropdown
  const countryFilterBtn = document.getElementById('country-filter-btn');
  const countryDropdown = document.getElementById('country-dropdown');

  countryFilterBtn?.addEventListener('click', () => {
    countryDropdown?.classList.toggle('active');
  });

  document.addEventListener('click', (e) => {
    if (!countryFilterBtn?.contains(e.target as Node) && !countryDropdown?.contains(e.target as Node)) {
      countryDropdown?.classList.remove('active');
    }
  });

  // Country filter checkboxes
  const countryCheckboxes = document.querySelectorAll('input[name="country"]');
  countryCheckboxes.forEach(checkbox => {
    checkbox.addEventListener('change', () => {
      const selectedCountries = (Array.from(countryCheckboxes) as HTMLInputElement[])
        .filter((cb) => cb.checked)
        .map((cb) => cb.value);

      caseItems.forEach(item => {
        const itemCountry = item.getAttribute('data-country');
        const itemCategory = item.getAttribute('data-category');
        const activeTab = document.querySelector('.cases-tab.active')?.getAttribute('data-filter');
        const matchesTab = itemCategory === activeTab;
        const matchesCountry = selectedCountries.length === 0 ||
          selectedCountries.includes(itemCountry || '');

        if (matchesTab && matchesCountry) {
          item.classList.remove('hidden');
        } else {
          item.classList.add('hidden');
        }
      });
      currentPage = 1;
      updatePagination();
    });
  });

  // Pagination buttons
  document.getElementById('pagination-prev')?.addEventListener('click', () => {
    if (currentPage > 1) {
      currentPage--;
      updatePagination();
    }
  });
  document.getElementById('pagination-next')?.addEventListener('click', () => {
    const visible = getVisibleItems();
    const totalPages = Math.max(1, Math.ceil(visible.length / PER_PAGE));
    if (currentPage < totalPages) {
      currentPage++;
      updatePagination();
    }
  });
</script>
