<style>
  /* Base: desktop. Responsive: 1024px (tablet), 768px (mobile). */
  /* Hero Section */
  .hero-section {
    position: relative;
    width: 100%;
    background-color: #0c0c0c;
  }

  .hero-wrapper {
    padding: 24px;
    height: 80vh;
    min-height: 700px;
  }

  .hero-banner {
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: 24px;
    overflow: hidden;
    background-image: url("/images/especializaciones/espe-hero.jpg");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    display: flex;
    align-items: center;
    padding-top: 100px;
  }

  .hero-container {
    position: relative;
    z-index: 1;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 100px;
    width: 100%;
    display: flex;
    flex-direction: column;
    min-height: calc(100vh - 100px);
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .hero-title-especializaciones {
    color: var(--neutral-100);
    font-size: 64px;
    font-weight: 700;
    line-height: 59px;
    margin: 0 0 1rem 0;
    text-align: center;
  }

  .hero-subtitle-especializaciones {
    color: var(--neutral-100);
    font-family: 'Infra', sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 1;
    margin: 0;
    opacity: 0.9;
    text-align: center;
  }

  /* Especializaciones AWS Section */
  .especializaciones-aws-section {
    position: relative;
    width: 100%;
    overflow: hidden;
    padding: 100px 0;
  }

  .especializaciones-aws-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .especializaciones-aws-bg-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .especializaciones-aws-container {
    position: relative;
    z-index: 1;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 100px;
  }

  .especializaciones-aws-top {
    display: grid;
    grid-template-columns: 1fr 320px;
    gap: 4rem;
    align-items: start;
  }

  .especializaciones-aws-title {
    color: #1a1a1a;
    font-size: 32px;
    font-weight: 700;
    line-height: 32px;
    margin: 0 0 1.5rem 0;
  }

  .especializaciones-aws-title-green {
    color: #00725D;
  }

  .especializaciones-aws-parrafo {
    font-family: 'Infra', sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 1;
    color: #4a4a4a;
    margin: 0 0 1rem 0;
  }

  .especializaciones-aws-parrafo strong {
    font-weight: 700;
    color: #1a1a1a;
  }

  .especializaciones-aws-right {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    position: sticky;
    top: 120px;
  }

  .especializaciones-aws-logo {
    width: 100%;
    max-width: 280px;
    height: auto;
    object-fit: contain;
  }

  .especializaciones-aws-cards {
    display: grid;
    grid-template-columns: repeat(2, 512px);
    gap: 24px;
    margin-top: 4rem;
    width: 100%;
    justify-content: center;
  }

  .especializaciones-card {
    display: flex;
    flex-direction: column;
    background: #fafafa;
    border-radius: 16px;
    padding: 16px 24px;
    text-decoration: none;
    color: inherit;
    transition: background-color 0.3s ease;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
  }

  .especializaciones-card:hover {
    background: #EBFFFB;
  }

  .especializaciones-card-top {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
    margin-bottom: 1rem;
  }

  .especializaciones-card-badge {
    width: 150px;
    height: 150px;
    flex-shrink: 0;
    object-fit: contain;
  }

  .especializaciones-card-head {
    flex: 1;
    min-width: 0;
  }

  .especializaciones-card-title {
    color: #1a1a1a;
    font-size: 20px;
    font-weight: 700;
    line-height: 125%;
    margin: 0 0 0.5rem 0;
  }

  .especializaciones-card-desc {
    font-family: 'Infra', sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 20px;
    color: #4a4a4a;
    margin: 0;
  }

  .especializaciones-card-list {
    list-style: none;
    padding: 0;
    margin: 0 0 1rem 0;
    font-family: 'Infra', sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 20px;
