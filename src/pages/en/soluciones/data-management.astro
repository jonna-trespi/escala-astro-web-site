---
import Header from '../../../components/Header.astro';
import GoogleAnalytics from '../../../components/GoogleAnalytics.astro';
import Footer from '../../../components/Footer.astro';
import { getT, localePrefix } from '../../../i18n';
import type { Locale } from '../../../i18n';
import en from '../../../i18n/en.json';

const lang: Locale = 'en';
const currentPath = Astro.url.pathname;
const dict = en;
const t = getT(dict);
const basePath = localePrefix(lang);
import '../../../styles/global.css';
---

<!DOCTYPE html>
<html lang={lang}>
<head>
  <GoogleAnalytics />
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{t('dataManagement.title')}</title>
  <meta name="description" content={t('dataManagement.metaDescription')} />
  <link rel="icon" type="image/png" href="/logos/escala-webclip.png">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght@400&display=swap" rel="stylesheet">
</head>
<body>
  <Header lang={lang} currentPath={currentPath} />
  <main>
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="hero-wrapper">
        <div class="hero-banner">
          <div class="hero-container">
            <div class="hero-content">
              <div class="hero-left">
                <h1 class="hero-title">{t('dataManagement.heroTitle')}</h1>
                <p class="hero-description-text">
                  {t('dataManagement.heroDescription')}
                </p>
              </div>
              <div class="hero-right">
                <div class="hero-stat-box">
                  <div class="hero-stat-number">70<span class="hero-stat-percent">%</span></div>
                  <p class="hero-stat-text">{t('dataManagement.heroStatText')}</p>
                </div>
                <p class="hero-stat-source">{t('dataManagement.heroStatSource')}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Use Cases Section -->
  <section class="use-cases-section">
      <!-- Title -->
      <div class="use-cases-title-container">
        <h4 class="use-cases-pretitle">{t('dataManagement.useCasesPretitle')}</h4>
        <h2 class="use-cases-title" set:html={t('dataManagement.useCasesTitle')}></h2>
      </div>

      <!-- Data & Analytics -->
      <div class="use-cases-container">
        <div class="use-cases-header">
          <h3 class="use-cases-category-title">{t('dataManagement.categoryTitle')}</h3>
          <p class="use-cases-category-subtitle">{t('dataManagement.categorySubtitle')}</p>
        </div>

        <div class="use-cases-card">
          <div class="use-cases-tabs">
            <button class="tab-button active">{t('dataManagement.tab1')}</button>
            <button class="tab-button">{t('dataManagement.tab2')}</button>
            <button class="tab-button">{t('dataManagement.tab3')}</button>
            <button class="tab-button">{t('dataManagement.tab4')}</button>
          </div>

          <!-- Tab 1: Data governance -->
          <div class="use-cases-content active" data-tab="0">
            <div class="use-cases-text">
              <h4 class="use-cases-content-title">{t('dataManagement.tab1Title')}</h4>
              <p class="use-cases-content-intro">
                {t('dataManagement.tab1Intro1')}
              </p>
              <p class="use-cases-content-intro" set:html={t('dataManagement.tab1Intro2')}></p>
              <ul class="use-cases-list">
                <li><span class="material-symbols-outlined">check</span> {t('dataManagement.tab1Li1')}</li>
                <li><span class="material-symbols-outlined">check</span> {t('dataManagement.tab1Li2')}</li>
              </ul>
              <!-- <button class="use-cases-link accordion-trigger" data-accordion="data-1">
                <span class="material-symbols-outlined accordion-icon">add</span>
                Nuestras soluciones
              </button>
              <div class="accordion-content" id="data-1">
                <p class="accordion-text">
                  Data Discovery Workshop, Data Assessment, EBA Data Strategy.
                </p>
              </div> -->
            </div>
            <div class="use-cases-image">
              <img src="/images/cases/data/case_1.jpg" alt={t('dataManagement.tab1ImgAlt')} />
            </div>
          </div>

          <!-- Tab 2: Data engineering -->
          <div class="use-cases-content" data-tab="1">
            <div class="use-cases-text">
              <h4 class="use-cases-content-title">{t('dataManagement.tab2Title')}</h4>
              <p class="use-cases-content-intro">
                {t('dataManagement.tab2Intro1')}
              </p>
              <p class="use-cases-content-intro">
                {t('dataManagement.tab2Intro2')}
              </p>
              <ul class="use-cases-list">
                <li><span class="material-symbols-outlined">check</span> {t('dataManagement.tab2Li1')}</li>
                <li><span class="material-symbols-outlined">check</span> {t('dataManagement.tab2Li2')}</li>
                <li><span class="material-symbols-outlined">check</span> {t('dataManagement.tab2Li3')}</li>
              </ul>
              <!-- <button class="use-cases-link accordion-trigger" data-accordion="data-2">
                <span class="material-symbols-outlined accordion-icon">add</span>
                Nuestras soluciones
              </button>
              <div class="accordion-content" id="data-2">
                <p class="accordion-text">
                  Data Lake Foundations, CSV ETL Platform, DB2 AS400 Empower, Relational Data Amplifier.
                </p>
              </div> -->
            </div>
            <div class="use-cases-image">
              <img src="/images/cases/data/case_2.jpg" alt={t('dataManagement.tab2ImgAlt')} />
            </div>
          </div>

          <!-- Tab 3: Business insights -->
          <div class="use-cases-content" data-tab="2">
            <div class="use-cases-text">
              <h4 class="use-cases-content-title">{t('dataManagement.tab3Title')}</h4>
              <p class="use-cases-content-intro">
                {t('dataManagement.tab3Intro1')}
              </p>
              <p class="use-cases-content-intro">
                {t('dataManagement.tab3Intro2')}
              </p>
              <ul class="use-cases-list">
                <li><span class="material-symbols-outlined">check</span> {t('dataManagement.tab3Li1')}</li>
                <li><span class="material-symbols-outlined">check</span> {t('dataManagement.tab3Li2')}</li>
              </ul>
              <!-- <button class="use-cases-link accordion-trigger" data-accordion="data-3">
                <span class="material-symbols-outlined accordion-icon">add</span>
                Nuestras soluciones
              </button>
              <div class="accordion-content" id="data-3">
                <p class="accordion-text">
                  Connect BI, Lake House Accelerator for SAP, soluciones sobre Amazon Athena y QuickSight.
                </p>
              </div> -->
            </div>
            <div class="use-cases-image">
              <img src="/images/cases/data/case_3.jpg" alt={t('dataManagement.tab3ImgAlt')} />
            </div>
          </div>

          <!-- Tab 4: Advance analytics -->
          <div class="use-cases-content" data-tab="3">
            <div class="use-cases-text">
              <h4 class="use-cases-content-title">{t('dataManagement.tab4Title')}</h4>
              <p class="use-cases-content-intro">
                {t('dataManagement.tab4Intro1')}
              </p>
              <p class="use-cases-content-intro">
                {t('dataManagement.tab4Intro2')}
              </p>
              <ul class="use-cases-list">
                <li><span class="material-symbols-outlined">check</span> {t('dataManagement.tab4Li1')}</li>
                <li><span class="material-symbols-outlined">check</span> {t('dataManagement.tab4Li2')}</li>
                <li><span class="material-symbols-outlined">check</span> {t('dataManagement.tab4Li3')}</li>
              </ul>
              <!-- <button class="use-cases-link accordion-trigger" data-accordion="data-3">
                <span class="material-symbols-outlined accordion-icon">add</span>
                Nuestras soluciones
              </button>
              <div class="accordion-content" id="data-3">
                <p class="accordion-text">
                  Connect BI, Lake House Accelerator for SAP, soluciones sobre Amazon Athena y QuickSight.
                </p>
              </div> -->
            </div>
            <div class="use-cases-image">
              <img src="/images/cases/data/case_4.jpg" alt={t('dataManagement.tab4ImgAlt')} />
            </div>
          </div>
        </div>
      </div>
    </section>

  <!-- Accelerator Section -->
  <section class="accelerator-section">
    <div class="accelerator-container">
      <!-- Title -->
      <h2 class="accelerator-title">
        {t('dataManagement.acceleratorTitle')}
      </h2>

      <!-- Features Grid -->
      <div class="features-grid">
        <div class="feature-item">
          <div class="feature-icon">
            <img src="/icons/solutions/icon_sol_1.png" alt={t('dataManagement.feature1Alt')} />
          </div>
          <h3 class="feature-title">{t('dataManagement.feature1Title')}</h3>
          <p class="feature-description">
            {t('dataManagement.feature1Desc')}
          </p>
        </div>

        <div class="feature-item">
          <div class="feature-icon">
            <img src="/icons/solutions/icon_sol_2.png" alt={t('dataManagement.feature2Alt')} />
          </div>
          <h3 class="feature-title">{t('dataManagement.feature2Title')}</h3>
          <p class="feature-description">
            {t('dataManagement.feature2Desc')}
          </p>
        </div>

        <div class="feature-item">
          <div class="feature-icon">
            <img src="/icons/solutions/icon_sol_3.png" alt={t('dataManagement.feature3Alt')} />
          </div>
          <h3 class="feature-title">{t('dataManagement.feature3Title')}</h3>
          <p class="feature-description">
            {t('dataManagement.feature3Desc')}
          </p>
        </div>

        <div class="feature-item">
          <div class="feature-icon">
            <img src="/icons/solutions/icon_sol_4.png" alt={t('dataManagement.feature4Alt')} />
          </div>
          <h3 class="feature-title">{t('dataManagement.feature4Title')}</h3>
          <p class="feature-description">
            {t('dataManagement.feature4Desc')}
          </p>
        </div>
      </div>

      <!-- CTA Card -->
      <div class="cta-card">
        <div class="cta-card-content">
          <div class="cta-card-text">
            <h2 class="cta-card-title">
              {t('dataManagement.ctaTitle')}
            </h2>
            <p class="cta-card-description">
              {t('dataManagement.ctaDescription')}
            </p>
          </div>
          <a href={`${basePath}/contacto`} class="btn btn-primary">
            {t('dataManagement.ctaButton')}
            <span class="material-symbols-outlined">north_east</span>
          </a>
        </div>
      </div>

      <!-- Footer Component -->
      <Footer lang={lang} />
    </div>
  </section>
</body>
</html>

<style>
  /* Contenido dentro de márgenes: sin overflow horizontal */
  .hero-section,
  .use-cases-section,
  .accelerator-section {
    overflow-x: hidden;
    max-width: 100%;
  }

  .hero-container,
  .what-is-container,
  .use-cases-container,
  .use-cases-title-container,
  .accelerator-container {
    max-width: 100%;
    box-sizing: border-box;
  }

  .hero-left,
  .hero-content,
  .use-cases-text,
  .cta-card-text {
    min-width: 0;
  }

  .cta-card-description {
    max-width: 100%;
  }

  /* Hero Section */
  .hero-section {
    position: relative;
    width: 100%;
    background-color: #0C0C0C;
  }

  .hero-wrapper {
    padding: 24px;
    height: 90vh;
    min-height: 700px;
  }

  .hero-banner {
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: 24px;
    overflow: hidden;
    background-image: url('/images/hero_data.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    display: flex;
    align-items: center;
    padding-top: 100px;
  }

  .hero-container {
    position: relative;
    z-index: 1;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 100px;
    width: 100%;
    display: flex;
    flex-direction: column;
    min-height: calc(100vh - 200px);
    justify-content: center;
  }

  .hero-title {
    color: var(--neutral-100);
    font-size: 64px;
    font-weight: 600;
    line-height: 72px;
    margin-bottom: 0;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 60% 40%;
    gap: 6rem;
    align-items: flex-end;
    padding: 24px;
  }

  .hero-left {
    display: flex;
    flex-direction: column;
    gap: 52px;
    align-items: flex-start;
    justify-content: flex-end;
    max-width: 550px;
  }

  .hero-right {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: flex-end;
    justify-content: flex-end;
    position: absolute;
    bottom: 6rem;
    right: 6rem;
  }

  /* Stat Box específico para Cloud Migration */
  .hero-stat-box {
    position: relative;
    border-radius: 12px;
    padding: 16px 24px;
    margin-bottom: 0;
    max-width: 400px;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    background: rgba(250, 250, 250, 0.15);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(254, 254, 254, 0.5);
  }


  .hero-stat-number {
    color: #0DFFD3;
    font-family: 'Nexa', sans-serif;
    font-size: 56px;
    font-weight: 700;
    line-height: 1;
    margin: 0;
    flex-shrink: 0;
  }

  .hero-stat-percent {
    font-family: 'Nexa', sans-serif;
    font-size: 56px;
    color: #0DFFD3;
  }

  .hero-stat-text {
    color: var(--neutral-100);
    font-size: 14px;
    font-weight: 400;
    line-height: 1.4;
    margin: 0;
    opacity: 0.9;
    flex: 1;
  }

  .hero-stat-source {
    color: var(--neutral-100);
    font-size: 12px;
    font-weight: 400;
    font-style: italic;
    margin-bottom: 0;
    opacity: 0.7;
    text-align: right;
  }

  .hero-description-text {
    color: var(--neutral-100);
    font-size: 22px;
    font-weight: 400;
    line-height: 1.6;
    margin-bottom: 0;
    opacity: 0.9;
  }

  .hero-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.75rem;
    background: #00C19F;
    color: var(--neutral-800);
    font-size: 16px;
    font-weight: 500;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s ease;
    white-space: nowrap;
    border: none;
    cursor: pointer;
  }

  .hero-button:hover {
    background: #00A585;
    transform: translateY(-2px);
  }

  .hero-button .material-symbols-outlined {
    font-size: 20px;
    width: 20px;
    height: 20px;
  }

  /* Use Cases Section */
  .use-cases-section {
    width: 100%;
    background-image: url('/images/soluciones_tabs_bg.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: 80px 0;
  }

  .use-cases-title-container {
    max-width: 1000px;
    margin: 0 auto 96px auto;
    padding: 0 100px;
    padding-bottom: 54px;
    text-align: center;
    border-bottom: 1px solid #999999;
  }

  .use-cases-pretitle {
    color: var(--neutral-800);
    font-size: 32px;
    font-weight: 600;
    margin-bottom: 16px;
  }

  .use-cases-title {
    color: var(--neutral-800);
    font-size: 48px;
    font-weight: 500;
    line-height: 1;
  }

  .use-cases-title strong {
    font-weight: 700;
  }

  :global(.use-cases-title-green) {
    color: #00725D;
  }

  /* What is Cloud Migration - Inside use-cases-section */
  .what-is-container {
    max-width: 1400px;
    margin: 0 auto 100px auto;
    padding: 0 100px;
  }

  .what-is-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .what-is-left {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .what-is-title {
    color: #1a1a1a;
    font-size: 44px;
    font-weight: 500;
    line-height: 48px;
    margin: 0;
  }

  .what-is-description {
    color: #1a1a1a;
    font-size: 20px;
    font-weight: 400;
    line-height: 28px;
    margin: 0;
  }

  .what-is-image {
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  .what-is-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .what-is-features {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .what-is-feature {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
  }

  .feature-number {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: #041E42;
    color: var(--neutral-100);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    font-weight: 700;
    flex-shrink: 0;
  }

  .feature-text {
    flex: 1;
  }

  .feature-text h4 {
    color: var(--neutral-800);
    font-size: 18px;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
  }

  .feature-text p {
    color: #1a1a1a;
    font-size: 15px;
    font-weight: 400;
    line-height: 1.6;
    margin: 0;
  }

  .use-cases-container {
    max-width: 1400px;
    margin: 0 auto 60px auto;
    padding: 0 100px;
  }

  .use-cases-container:last-of-type {
    margin-bottom: 0;
  }

  .use-cases-header {
    margin-bottom: 40px;
  }

  .use-cases-category-title {
    color: var(--neutral-800);
    font-size: 32px;
    font-weight: 700;
  }

  .use-cases-category-subtitle {
    color: #1a1a1a;
    font-size: 20px;
    line-height: 1.2;
    font-weight: 400;
  }

  .use-cases-card {
    background: var(--neutral-100);
    border-radius: 8px;
    padding: 0;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .use-cases-tabs {
    display: flex;
    gap: 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .tab-button {
    flex: 1;
    padding: 16px 24px;
    background: transparent;
    color: var(--neutral-800);
    font-size: 16px;
    line-height: 20px;
    font-weight: 400;
    border: none;
    border-radius: 0;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
  }

  .tab-button.active {
    background: #041E42;
    color: var(--neutral-100);
    border-radius: 8px 8px 0 0;
    margin: 4px;
  }

  .tab-button:hover:not(.active) {
    background: rgba(0, 0, 0, 0.05);
  }

  .use-cases-content {
    display: none;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    padding: 48px 60px;
  }

  .use-cases-content.active {
    display: grid;
  }

  .use-cases-text {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .use-cases-content-title {
    font-family: 'Infra', sans-serif;
    color: var(--neutral-800);
    font-size: 24px;
    line-height: 1;
    font-weight: 500;
  }

  .use-cases-content-intro {
    color: #1a1a1a;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.3;
  }

  .use-cases-content-description {
    color: #1a1a1a;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.3;
    margin-top: 1rem;
  }

  .use-cases-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .use-cases-list li {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    color: #1a1a1a;
    font-size: 15px;
    line-height: 1.2;
  }

  .use-cases-list .material-symbols-outlined {
    color: #00C19F;
    font-size: 20px;
    flex-shrink: 0;
  }

  .use-cases-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #00C19F;
    font-size: 16px;
    font-weight: 500;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .use-cases-link:hover {
    color: #00A585;
  }

  .use-cases-link .material-symbols-outlined {
    font-size: 20px;
    width: 20px;
    height: 20px;
  }

  .accordion-icon {
    transition: transform 0.3s ease;
  }

  .accordion-trigger.active .accordion-icon {
    transform: rotate(180deg);
  }

  .accordion-content {
    display: none;
    overflow: hidden;
  }

  .accordion-content.active {
    display: block;
  }

  .accordion-text {
    color: #1a1a1a;
    font-size: 15px;
    line-height: 1.2;
  }

  .use-cases-image {
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  .use-cases-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* CTA Final Section */
  /* Accelerator Section */
  .accelerator-section {
    width: 100%;
    background-image: url('/images/soluciones_bg.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: 100px 0 80px 0;
  }

  .accelerator-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 100px;
  }

  .accelerator-title {
    color: var(--neutral-100);
    font-size: 44px;
    font-weight: 700;
    text-align: center;
    margin-bottom: 64px;
    line-height: 1.2;
  }

  /* Features Grid */
  .features-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0;
    margin-bottom: 8rem;
    align-items: stretch;
  }

  .feature-item {
    text-align: left;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1.5rem;
