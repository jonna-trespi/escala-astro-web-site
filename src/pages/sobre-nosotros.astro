<script>
  // Timeline interactivity
  document.addEventListener('DOMContentLoaded', () => {
    const timelineYears = document.querySelectorAll('.timeline-year');
    const timelineInfos = document.querySelectorAll('.timeline-info');
    
    // Show first year content by default
    if (timelineYears.length > 0 && timelineInfos.length > 0) {
      timelineYears[0].classList.add('active');
      timelineInfos[0].classList.add('active');
    }
    
    timelineYears.forEach((yearElement) => {
      yearElement.addEventListener('mouseenter', () => {
        const year = yearElement.getAttribute('data-year');
        
        // Remove active class from all years and infos
        timelineYears.forEach(y => y.classList.remove('active'));
        timelineInfos.forEach(info => info.classList.remove('active'));
        
        // Add active class to current year
        yearElement.classList.add('active');
        
        // Show corresponding content
        const correspondingInfo = document.querySelector(`[data-year-content="${year}"]`);
        if (correspondingInfo) {
          correspondingInfo.classList.add('active');
        }
      });
    });
  });
</script>
