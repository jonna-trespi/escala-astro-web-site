      <!-- Hero Section -->
      <section class="hero-section">
        <div class="hero-wrapper">
          <div class="hero-banner">
            <div class="hero-container">
              <div class="hero-content">
                <div class="hero-left">
                  <h1 class="hero-title">
                    {t('nosotros.heroTitle')}
                  </h1>
                  <h3 class="hero-subtitle">
                    {t('nosotros.heroSubtitle')}<span class="hero-subtitle-bold">{t('nosotros.heroSubtitleBold')}</span>
                  </h3>
                </div>
                <div class="hero-right">
                  <div class="hero-badge">
                    <img src="/images/nosotros/nosotros-partner.png" alt={t('nosotros.awsPartnerAlt')} class="aws-badge" />
                  </div>
                  <div class="hero-stat-box">
                    <p class="hero-stat-text">
                      {t('nosotros.heroStatText')}
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Stats Section -->
      <section class="stats-section">
        <div class="stats-container">
