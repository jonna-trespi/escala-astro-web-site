---
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import Icon from "../../components/Icon.astro";
const lang = 'pt';
const currentPath = Astro.url.pathname;
import "../../styles/global.css";

---

<!doctype html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contato - Escala 24x7</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght@400&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Header lang={lang} currentPath={currentPath} />
    <main>
      <!-- Hero Section -->
      <section class="hero-section">
        <div class="hero-wrapper">
          <div class="hero-banner">
            <div class="hero-container">
              <h1 class="hero-title-contacto">
                Somos seu aliado de transformação
              </h1>
              <p class="hero-subtitle-contacto">
                Ajudamos você a transformar a nuvem em motor de crescimento.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Contact Form Section -->
      <section class="contact-form-section">
        <div class="contact-form-background">
          <img src="/images/soluciones_tabs_bg.jpg" alt="" class="contact-form-bg-img" />
        </div>

        <div class="contact-form-container">
          <!-- Title at the top -->
          <h2 class="contact-form-title">
            Vamos falar do que<br />
            você precisa.
          </h2>

          <div class="contact-form-content">
            <!-- Left Column -->
            <div class="contact-form-left">
              <p class="contact-form-intro-title">Estamos presentes onde você estiver.</p>
              <img src="/images/countries.png" alt="Países onde atuamos" class="countries-image" />
            </div>

            <!-- Right Column -->
            <div class="contact-form-right">
              <p class="form-card-title">Dê o primeiro passo.</p>
              <p class="form-card-text">
                Deixe seus dados e um de nossos especialistas entrará em contato para acompanhá-lo em sua jornada de transformação digital com a AWS.
              </p>

              <div id="contact-form-wrapper">
                <form class="contact-form" id="contact-form">
                  <div class="form-group">
                    <input
                      type="text"
                      id="name"
                      name="name"
                      placeholder="Seu nome"
                      class="form-input"
                      required
                      autocomplete="name"
                    />
                  </div>

                  <div class="form-group">
                    <input
                      type="text"
                      id="organization"
                      name="organization"
                      placeholder="Organização"
                      class="form-input"
                      required
                      autocomplete="organization"
                    />
                  </div>

                  <div class="form-group">
                    <input
                      type="email"
                      id="email"
                      name="email"
                      placeholder="E-mail corporativo"
                      class="form-input"
                      required
                      autocomplete="email"
                    />
                  </div>

                  <div class="form-group">
                    <input
                      type="text"
                      id="country"
                      name="country"
                      placeholder="País"
                      class="form-input"
                      required
                      autocomplete="country"
                    />
                  </div>

                  <div class="form-group">
                    <input
                      type="tel"
                      id="phone"
                      name="phone"
                      placeholder="Telefone"
                      class="form-input"
                      required
                      autocomplete="tel"
                    />
                  </div>

                  <div class="form-group form-group-full" id="interest-group">
                    <label class="form-label">Em qual área você está interessado?</label>
                    <div class="interest-buttons">
                      <button type="button" class="interest-btn" data-value="migracion">Migração</button>
                      <button type="button" class="interest-btn" data-value="data">DATA</button>
                      <button type="button" class="interest-btn" data-value="genai">GenAI</button>
                      <button type="button" class="interest-btn" data-value="seguridad">Segurança</button>
                      <button type="button" class="interest-btn" data-value="personalizada">Solução personalizada</button>
                    </div>
                  </div>

                  <div class="form-group form-group-full form-group-terms">
                    <label class="terms-label">
                      <input type="checkbox" id="terms" name="terms" class="form-checkbox" />
                      <span class="terms-text">Aceito os termos e condições</span>
                    </label>
                  </div>

                  <div class="form-group form-group-full">
                    <button type="submit" class="btn btn-submit" id="submit-btn" disabled>
                      Enviar
                      <Icon name="north_east" size={20} />
                    </button>
                  </div>
                </form>
              </div>
              <div id="submit-success" class="submit-success" aria-live="polite" hidden>
                Formulário enviado
              </div>
            </div>
          </div>
        </div>
      </section>

      <Footer />
    </main>

    <script>
      // Drag to scroll functionality for 7R carousel
      document.addEventListener('DOMContentLoaded', () => {
        const carousel = document.querySelector('.seven-r-carousel') as HTMLElement | null;
        if (!carousel) return;

        let isDown = false;
        let startX: number = 0;
        let scrollLeft: number = 0;

        carousel.addEventListener('mousedown', (e: MouseEvent) => {
          isDown = true;
          carousel.classList.add('grabbing');
          startX = e.pageX - carousel.offsetLeft;
          scrollLeft = carousel.scrollLeft;
          e.preventDefault();
        });

        carousel.addEventListener('mouseleave', () => {
          isDown = false;
          carousel.classList.remove('grabbing');
        });

        carousel.addEventListener('mouseup', () => {
          isDown = false;
          carousel.classList.remove('grabbing');
        });

        carousel.addEventListener('mousemove', (e: MouseEvent) => {
          if (!isDown) return;
          e.preventDefault();
          const x = e.pageX - carousel.offsetLeft;
          const walk = (x - startX) * 2;
          carousel.scrollLeft = scrollLeft - walk;
        });
      });

      // Contact form validation (same behavior as ContactSection)
      (function () {
        const form = document.getElementById('contact-form');
        const wrapper = document.getElementById('contact-form-wrapper');
        const successEl = document.getElementById('submit-success');
        if (!form || !wrapper || !successEl) return;

        const inputIds = ['name', 'organization', 'email', 'country', 'phone'];
        const inputs = inputIds
          .map((id) => document.getElementById(id))
          .filter((el): el is HTMLInputElement => el != null);
        const interestButtons = document.querySelectorAll('.interest-btn');
        const termsCheckbox = document.getElementById('terms') as HTMLInputElement | null;
        const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement | null;

        const touchedInputs = new Set<HTMLInputElement>();

        function getValues() {
          const values: Record<string, string> = {};
          inputs.forEach((el) => {
            const id = el.id;
            values[id] = (el as HTMLInputElement).value?.trim() ?? '';
          });
          const hasInterest = Array.from(interestButtons).some((b) => b.classList.contains('selected'));
          const termsAccepted = termsCheckbox ? termsCheckbox.checked : false;
          return { values, hasInterest, termsAccepted };
        }

        function validate() {
          const { values, hasInterest, termsAccepted } = getValues();
          const allFilled = inputIds.every((id) => (values[id] ?? '').length > 0);
          return Boolean(allFilled && hasInterest && termsAccepted);
        }

        function updateUI() {
          const { values, hasInterest, termsAccepted } = getValues();
          const valid = validate();

          inputs.forEach((el) => {
            const id = el.id;
            const filled = (values[id] ?? '').length > 0;
            const isTextLike = /^(text|email|tel)$/i.test(el.type || 'text');
            const showError = !filled && (!isTextLike || touchedInputs.has(el));
            el.classList.toggle('error', showError);
          });

          if (submitBtn) submitBtn.disabled = !valid;
        }

        interestButtons.forEach((button) => {
          button.addEventListener('click', () => {
            button.classList.toggle('selected');
            updateUI();
          });
        });

        inputs.forEach((el) => {
          el.addEventListener('input', updateUI);
          el.addEventListener('change', updateUI);
          el.addEventListener('blur', () => {
            touchedInputs.add(el);
            updateUI();
          });
        });
        termsCheckbox?.addEventListener('change', updateUI);

        form.addEventListener('submit', (e) => {
          e.preventDefault();
          updateUI();
          if (!validate()) return;
          wrapper.setAttribute('data-hidden', 'true');
          successEl.removeAttribute('hidden');
          successEl.setAttribute('data-visible', 'true');
        });

        updateUI();
      })();
    </script>
  </body>
</html>

