---
import Icon from './Icon.astro';
import { getT, localePrefix } from '../i18n';
import type { Locale } from '../i18n';
import es from '../i18n/es.json';
import en from '../i18n/en.json';
import pt from '../i18n/pt.json';

interface Props {
  lang?: Locale;
}

const { lang = 'es' } = Astro.props;
const dict = lang === 'en' ? en : lang === 'pt' ? pt : es;
const t = getT(dict);
const basePath = localePrefix(lang);
---

<section class="aws-partner-section">
  <div class="aws-container">
    <div class="aws-card">
      <div class="aws-content">
        <div class="aws-logo">
          <img src="/logos/logo_aws.png" alt="AWS" />
        </div>

        <h2 class="aws-title">
          {t('awsPartnerSection.titleLine1')}<br>
          {t('awsPartnerSection.titleLine2')}
        </h2>

        <p class="aws-description">
          {t('awsPartnerSection.description')}
        </p>
      </div>

      <div class="aws-info">
        <p class="aws-info-text">
          {t('awsPartnerSection.infoBefore')}<strong>{t('awsPartnerSection.infoStrong')}</strong>{t('awsPartnerSection.infoAfter')}
        </p>
      </div>

      <a href={`${basePath}/aws-especializaciones`} class="btn btn-primary aws-cta">
        {t('awsPartnerSection.cta')}
        <Icon name="north_east" size={20} />
      </a>
    </div>

    <div class="aws-image">
      <img src="/images/partner_tablet.png" alt="AWS Partner Certificate" />
    </div>
  </div>
</section>

<style>
  .aws-partner-section {
    width: 100%;
    background-color: var(--neutral-200);
    padding: 0;
    padding-bottom: 120px;
  }

  .aws-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 100px;
    position: relative;
  }

  .aws-card {
    background-image: url('/images/aws_bg.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    border-radius: 24px;
    padding: 60px;
    position: relative;
    overflow: hidden;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
  }

  .aws-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    z-index: 2;
  }

  .aws-logo {
    margin-bottom: 2rem;
  }

  .aws-logo img {
    width: 110px;
    height: auto;
  }

  .aws-title {
    color: var(--neutral-100);
    font-size: 56px;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    margin-left: 3rem;
  }

  .aws-description {
    color: var(--neutral-100);
    font-size: 20px;
    font-weight: 400;
    line-height: 28px;
    opacity: 0.9;
    margin-bottom: 2.5rem;
    margin-left: 3rem;
  }

  .aws-cta {
    align-self: flex-start;
    margin-left: 3rem;
    grid-column: 1;
    width: fit-content;
  }

  .aws-info {
    display: flex;
    flex-direction: column;
    z-index: 2;
  }

  .aws-info-text {
    color: var(--neutral-100);
    font-size: 16px;
    font-weight: 400;
    line-height: 1.6;
    opacity: 0.9;
    margin-bottom: 2rem;
    margin-top: 2rem;
    max-width: 500px;
  }

  .aws-info-text strong {
    font-weight: 700;
  }

  .aws-image {
    position: absolute;
    bottom: -120px;
    right: 150px;
    max-width: 650px;
    z-index: 10;
  }

  .aws-image img {
    width: 100%;
    height: auto;
    filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.4));
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .aws-container {
      padding: 0 60px;
    }

    .aws-card {
      grid-template-columns: 1fr;
      padding: 40px;
      overflow: visible;
      padding-bottom: 40px;
    }

    .aws-title {
      font-size: 42px;
      margin-left: 0;
    }

    .aws-description {
      margin-left: 0;
    }

    .btn-aws {
      margin-left: 0;
    }

    .aws-info-text {
      max-width: 100%;
    }

    .aws-image {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .aws-partner-section {
      padding: 60px 0;
    }

    .aws-container {
      padding: 0 2rem;
    }

    .aws-card {
      padding: 30px 24px;
      gap: 0;
    }

    .aws-content {
      text-align: left;
    }

    .aws-logo {
      margin-bottom: 16px;
    }

    .aws-logo img {
      width: 90px;
    }

    .aws-title {
      font-size: 36px;
      margin-left: 0;
      margin-bottom: 24px;
      line-height: 1.2;
      text-align: left;
    }

    .aws-description {
      font-size: 16px;
      margin-left: 0;
      margin-bottom: 24px;
      line-height: 1.2;
      text-align: left;
    }

    .aws-info {
      margin-top: 0;
      margin-bottom: 32px;
    }

    .aws-info-text {
      font-size: 16px;
      margin-top: 0;
      margin-bottom: 0;
      line-height: 1.2;
      text-align: left;
    }

    .aws-cta {
      margin-left: 0;
      align-self: flex-start;
      justify-content: flex-start;
    }

    .aws-image {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .aws-partner-section {
      padding: 40px 0;
    }

    .aws-card {
      padding: 24px 20px;
      gap: 0;
    }

    .aws-title {
      font-size: 28px;
      line-height: 1.2;
      text-align: left;
    }

    .aws-description {
      font-size: 16px;
      line-height: 1.2;
      text-align: left;
    }

    .aws-info-text {
      font-size: 16px;
      text-align: left;
    }

    .aws-cta {
      align-self: flex-start;
      justify-content: flex-start;
    }

    .aws-image {
      display: none;
    }
  }
</style>

