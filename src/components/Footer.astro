---
import { getT, localePrefix } from '../i18n';
import type { Locale } from '../i18n';
import es from '../i18n/es.json';
import en from '../i18n/en.json';
import pt from '../i18n/pt.json';

interface Props {
  lang?: Locale;
}

const { lang = 'es' } = Astro.props;
const dict = lang === 'en' ? en : lang === 'pt' ? pt : es;
const t = getT(dict);
const basePath = localePrefix(lang);
---

<div class="footer-wrapper">
  <div class="footer-embedded">
  <div class="footer-content">
    <!-- Footer columns group on left -->
    <div class="footer-columns-wrapper">
      <div class="footer-column">
        <h4 class="footer-column-title">{t('footer.company')}</h4>
        <ul class="footer-links">
          <li><a href={`${basePath}/sobre-nosotros`}>{t('footer.about')}</a></li>
          <li><a href={`${basePath}/partnerships`}>{t('footer.allies')}</a></li>
          <li><a href={`${basePath}/aws-especializaciones`}>{t('footer.specializations')}</a></li>
          <li><a href="https://escala24x7.careers.hibob.com/jobs" target="_blank" rel="noopener noreferrer">{t('footer.careers')}</a></li>
        </ul>
      </div>

      <div class="footer-column">
        <h4 class="footer-column-title">{t('footer.solutions')}</h4>
        <ul class="footer-links">
          <li><a href={`${basePath}/soluciones/cloud-migration`}>{t('nav.cloudMigration')}</a></li>
          <li><a href={`${basePath}/soluciones/data-management`}>{t('nav.data')}</a></li>
          <li><a href={`${basePath}/soluciones/cloud-security`}>{t('nav.security')}</a></li>
          <li><a href={`${basePath}/soluciones/ai-solutions`}>{t('nav.ai')}</a></li>
          <li><a href={`${basePath}/soluciones/managed-services`}>{t('nav.managed')}</a></li>
        </ul>
      </div>

      <div class="footer-column">
        <h4 class="footer-column-title">{t('footer.industries')}</h4>
        <ul class="footer-links">
          <li><a href={`${basePath}/industrias/finanzas`}>{t('nav.finance')}</a></li>
          <li><a href={`${basePath}/industrias/manufactura`}>{t('nav.manufacturing')}</a></li>
          <li><a href={`${basePath}/industrias/energia`}>{t('nav.energy')}</a></li>
          <li><a href={`${basePath}/industrias/retail-cpg`}>{t('nav.retail')}</a></li>
          <li><a href={`${basePath}/industrias/viajes-hosteleria`}>{t('nav.travel')}</a></li>
        </ul>
      </div>

      <div class="footer-column">
        <h4 class="footer-column-title">{t('footer.resources')}</h4>
        <ul class="footer-links">
          <li><a href={`${basePath}/casos-de-exito`}>{t('nav.caseStudies')}</a></li>
          <li><a href={`${basePath}/blog`}>{t('nav.blog')}</a></li>
        </ul>
      </div>

      <div class="footer-column">
        <h4 class="footer-column-title">{t('footer.clientSupport')}</h4>
        <ul class="footer-links">
          <li><a href={`${basePath}/contacto`}>{t('nav.contact')}</a></li>
          <li><a href="https://escala24x7.atlassian.net/servicedesk/customer/user/login?destination=portals" target="_blank" rel="noopener noreferrer">{t('footer.supportPortal')}</a></li>
        </ul>
      </div>
    </div>

    <!-- Footer Logo on right -->
    <div class="footer-logo-container">
      <img
        src="/logos/logo_footer.png"
        alt={t('footer.logoAlt')}
        class="footer-logo"
      />
    </div>
  </div>

  <div class="footer-social">
    <a href="https://www.linkedin.com/company/escala-24x7-inc/" target="_blank" class="social-link" aria-label="LinkedIn">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path
          d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
        ></path>
      </svg>
    </a>
    <a href="https://www.youtube.com/user/Escala24x7" target="_blank" class="social-link" aria-label="YouTube">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path
          d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"
        ></path>
      </svg>
    </a>
    <a href="https://www.facebook.com/Escala24x7/" target="_blank" class="social-link" aria-label="Facebook">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path
          d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"
        ></path>
      </svg>
    </a>
    <a href="https://x.com/Escala24x7" target="_blank" class="social-link" aria-label="X">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path
          d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
        ></path>
      </svg>
    </a>
  </div>
  <div class="footer-bottom">
    <div class="footer-legal">
      <a href="https://cdn.prod.website-files.com/61b289a7b76288810959ed6a/67695a35eb83a9a271c7f341_Legal-92424-POLI%CC%81TICA%20DE%20PRIVACIDAD%20-%20ESCALA%2024X7%20-%20ES.pdf" target="_blank">{t('footer.privacyPolicy')}</a>
      <a href="https://cdn.prod.website-files.com/61b289a7b76288810959ed6a/6500d9a975d1a33a539ef90a_Terminos%20y%20condiciones.pdf" target="_blank">{t('footer.terms')}</a>
      <a href={lang === 'en' ? 'https://cdn.prod.website-files.com/6980f6f0e4844fc50c236095/69a046eec33ddafb671c2f96_poli%CC%81tica-de-seguridad-de-la-informacio%CC%81n-en.pdf' : 'https://cdn.prod.website-files.com/6980f6f0e4844fc50c236095/69a046ee1cfe7303a795a43a_poli%CC%81tica-de-seguridad-de-la-informacio%CC%81n-es.pdf'} target="_blank" rel="noopener noreferrer">{t('footer.securityPolicy')}</a>
      <a href="https://cdn.prod.website-files.com/61b289a7b76288810959ed6a/6500d9e1dd49e73f0e714f4b_Politica%20de%20cookies.pdf" target="_blank">{t('footer.cookiePolicy')}</a>
      <a href="https://cdn.prod.website-files.com/61b289a7b76288810959ed6a/6500da5bdd49e73f0e71dbc7_GDPR.pdf" target="_blank">{t('footer.gdpr')}</a>
      <a href="https://cdn.prod.website-files.com/61b289a7b76288810959ed6a/68b0772b8e75c8380284d8cc_Poli%CC%81tica%20Corporativa%20de%20E%CC%81tica%20y%20Derechos%20Laborales%20(ES).pdf" target="_blank">{t('footer.ethicsPolicy')}</a>
      <a href="https://cdn.prod.website-files.com/61b289a7b76288810959ed6a/68b0757005f182b5947a55e7_Poli%CC%81tica%20de%20Medio%20Ambiente%20y%20Sostenibilidad%20para%20Escala%2024x7%20_%20Mayo%202025%20(4).pdf" target="_blank">{t('footer.environmentPolicy')}</a>
      <a href="https://cdn.prod.website-files.com/61b289a7b76288810959ed6a/68e42acee98ea329f1e58c2a_POLI%CC%81TICA%20DE%20PRIVACIDAD-%20ESCALA%20COLOMBIA%20(ES).pdf" target="_blank">{t('footer.propertyPolicy')}</a>
    </div>
    <p class="footer-copyright">
      {t('footer.copyright')}
    </p>
  </div>
</div>

<style>
  .footer-wrapper {
    background-color: #020E1E;
    padding: 80px 0;
  }

  /* Footer Embedded */
  .footer-embedded {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    background-image: url("/images/footer.jpg");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-content {
    position: relative;
    z-index: 1;
    padding: 90px 80px 60px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
    gap: 2rem;
  }

  .footer-columns-wrapper {
    display: flex;
    gap: 32px;
    align-items: start;
  }

  .footer-logo-container {
    display: flex;
    justify-content: flex-end;
    align-items: flex-start;
    flex-shrink: 0;
  }

  .footer-logo {
    width: auto;
    max-width: 200px;
    height: auto;
  }

  .footer-column {
    display: flex;
    flex-direction: column;
  }

  .footer-column-title {
    color: var(--neutral-100);
    font-size: 16px;
    font-family: 'Infra', sans-serif;
    font-weight: 500;
    margin-bottom: 12px;
    margin-top: 0;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .footer-links a {
    color: var(--neutral-100);
    font-size: 14px;
    font-weight: 400;
    text-decoration: none;
    opacity: 0.8;
    transition: all 0.3s ease;
  }

  .footer-links a:hover {
    opacity: 1;
    color: var(--light-green-400);
  }

  .footer-social {
    display: flex;
    gap: 0.75rem;
    justify-content: flex-end;
    align-items: center;
    padding: 0 80px;
  }

  .social-link {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--neutral-100);
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .social-link:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: var(--light-green-400);
    color: var(--light-green-400);
    transform: translateY(-2px);
  }

  .footer-bottom {
    position: relative;
    z-index: 1;
    padding: 24px 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    text-align: center;
    align-items: center;
    margin: 24px 60px;
    border-top: 1px solid white;
  }

  .footer-legal {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.25rem;
    font-size: 11px;
    line-height: 1.4;
  }

  .footer-legal a {
    color: var(--neutral-100);
    text-decoration: none;
    opacity: 0.6;
    transition: opacity 0.3s ease;
    white-space: nowrap;
  }

  .footer-legal a:hover {
    opacity: 1;
  }

  .footer-legal a:not(:last-child)::after {
    content: "â€¢";
    margin-left: 0.25rem;
    opacity: 0.5;
  }

  .footer-copyright {
    font-size: 11px;
    color: var(--neutral-100);
    opacity: 0.6;
    margin: 0;
    line-height: 1.4;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .footer-wrapper {
      padding: 60px 0;
    }

    .footer-content {
      padding: 50px;
      flex-direction: column;
      gap: 2rem;
      align-items: center;
    }

    .footer-columns-wrapper {
      flex-direction: column;
      gap: 2.5rem;
      align-items: center;
      width: 100%;
    }

    .footer-logo-container {
      justify-content: center;
      order: -1;
      width: 100%;
    }

    .footer-column {
      text-align: center;
      width: 100%;
    }

    .footer-links {
      align-items: center;
    }

    .footer-social {
      justify-content: center;
    }
  }

  @media (max-width: 768px) {
    .footer-wrapper {
      padding: 40px 0;
    }

    .footer-column-title,
    .footer-links a,
    .footer-copyright,
    .footer-legal a {
      line-height: 1.2;
    }

    .footer-content {
      padding: 40px 30px;
      flex-direction: column;
      align-items: center;
    }

    .footer-columns-wrapper {
      flex-direction: column;
      gap: 2rem;
      align-items: center;
      width: 100%;
    }

    .footer-logo-container {
      justify-content: center;
      order: -1;
      width: 100%;
    }

    .footer-logo {
      max-width: 150px;
    }

    .footer-column {
      text-align: center;
      width: 100%;
    }

    .footer-links {
      align-items: center;
    }

    .footer-social {
      justify-content: center;
    }

    .footer-bottom {
      padding: 1.5rem 30px;
    }
  }
</style>
</div>
