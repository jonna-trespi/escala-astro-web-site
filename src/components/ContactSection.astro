---
import Icon from "./Icon.astro";
import Footer from "./Footer.astro";
import { getT } from '../i18n';
import type { Locale } from '../i18n';
import es from '../i18n/es.json';
import en from '../i18n/en.json';
import pt from '../i18n/pt.json';

interface Props {
  lang?: Locale;
}

const { lang = 'es' } = Astro.props;
const dict = lang === 'en' ? en : lang === 'pt' ? pt : es;
const t = getT(dict);

const interestAreas = [
  { id: "migracion", label: t('contactSection.areaMigracion') },
  { id: "data", label: t('contactSection.areaData') },
  { id: "genai", label: t('contactSection.areaGenAI') },
  { id: "seguridad", label: t('contactSection.areaSeguridad') },
  { id: "personalizada", label: t('contactSection.areaPersonalizada') },
];
---

<section class="contact-section">
  <div class="contact-background">
    <img src="/images/footer_bg.jpg" alt="" class="contact-bg-img" />
    <div class="contact-bg-overlay"></div>
  </div>

  <div class="contact-container">
    <div class="contact-content">
      <div class="contact-left">
        <h2 class="contact-title">
          {t('contactSection.titleLine1')}<br />
          {t('contactSection.titleLine2')}
        </h2>
        <div class="contact-intro">
          <p class="contact-intro-title">{t('contactSection.introTitle')}</p>
          <p class="contact-intro-text">
            {t('contactSection.introText')}
          </p>
        </div>
      </div>

      <div class="contact-right">
        <div id="contact-form-wrapper">
          <form class="contact-form" id="contact-form">
            <div class="form-group">
              <input
                type="text"
                id="name"
                name="name"
                placeholder={t('contactSection.placeholderName')}
                class="form-input"
                required
                autocomplete="name"
              />
            </div>

            <div class="form-group">
              <input
                type="text"
                id="organization"
                name="organization"
                placeholder={t('contactSection.placeholderOrg')}
                class="form-input"
                required
                autocomplete="organization"
              />
            </div>

            <div class="form-group">
              <input
                type="email"
                id="email"
                name="email"
                placeholder={t('contactSection.placeholderEmail')}
                class="form-input"
                required
                autocomplete="email"
              />
            </div>

            <div class="form-group">
              <input
                type="text"
                id="country"
                name="country"
                placeholder={t('contactSection.placeholderCountry')}
                class="form-input"
                required
                autocomplete="country"
              />
            </div>

            <div class="form-group">
              <input
                type="tel"
                id="phone"
                name="phone"
                placeholder={t('contactSection.placeholderPhone')}
                class="form-input"
                required
                autocomplete="tel"
              />
            </div>

            <div class="form-group form-group-full" id="interest-group">
              <label class="form-label">{t('contactSection.interestLabel')}</label>
              <div class="interest-buttons">
                {
                  interestAreas.map((area) => (
                    <button
                      type="button"
                      class="interest-btn"
                      data-value={area.id}
                    >
                      {area.label}
                    </button>
                  ))
                }
              </div>
            </div>

            <div class="form-group form-group-full form-group-terms">
              <label class="terms-label">
                <input type="checkbox" id="terms" name="terms" class="form-checkbox" />
                <span class="terms-text">{t('contactSection.acceptTerms')}</span>
              </label>
            </div>

            <div class="form-group form-group-full">
              <button type="submit" class="btn btn-submit" id="submit-btn" disabled>
                {t('contactSection.submit')}
                <Icon name="north_east" size={20} />
              </button>
            </div>
          </form>
        </div>
        <div id="submit-success" class="submit-success" aria-live="polite" hidden>
          {t('contactSection.submittedMessage')}
        </div>
      </div>
    </div>
      
    <!-- Footer Component -->
    <Footer lang={lang} />
  </div>
</section>

<style>
  .contact-section {
    position: relative;
    width: 100%;
    padding: 80px 0 0 0;
    overflow: hidden;
  }

  .contact-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .contact-bg-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .contact-bg-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .contact-container {
    position: relative;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 100px;
    z-index: 1;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    margin-bottom: 80px;
  }

  .contact-left {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .contact-title {
    color: var(--neutral-100);
    font-size: 56px;
    font-weight: 700;
    line-height: 1.2;
  }

  .contact-intro {
    color: var(--neutral-100);
  }

  .contact-intro-title {
    font-size: 24px;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .contact-intro-text {
    font-size: 16px;
    font-weight: 400;
    line-height: 20px;
    opacity: 0.9;
  }

  .contact-right {
    /* Sin background ni tarjeta */
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-group-full {
    grid-column: 1 / -1;
  }

  .form-label {
    color: var(--neutral-100);
    font-size: 16px;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .form-input {
    width: 100%;
    padding: 1rem 1.25rem;
    font-size: 16px;
    font-weight: 400;
    color: var(--neutral-100);
    background: transparent;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 8px;
    transition: all 0.3s ease;
    font-family: "Roboto", sans-serif;
  }

  .form-input::placeholder {
    color: rgba(255, 255, 255, 0.6);
  }

  .form-input:focus {
    outline: none;
    border: 3px solid #00C19F;
    background: rgba(10, 20, 32, 1);
  }

  .form-input.error {
    border-color: #C81109;
    background: rgba(229, 57, 53, 0.08);
  }

  .form-group-terms {
    margin-top: 0.5rem;
  }

  .terms-label {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    cursor: pointer;
    color: var(--neutral-100);
    font-size: 14px;
    font-weight: 400;
  }

  .form-checkbox {
    width: 18px;
    height: 18px;
    accent-color: #00C19F;
    cursor: pointer;
  }

  .btn-submit:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
  }

  .btn-submit:disabled:hover {
    background: #00C19F;
    transform: none;
  }

  .submit-success {
    display: none;
    color: var(--neutral-100);
    font-size: 24px;
    font-weight: 600;
    text-align: center;
    padding: 2rem;
  }

  .submit-success[data-visible="true"] {
    display: block;
  }

  #contact-form-wrapper[data-hidden="true"] {
    display: none;
  }

  .interest-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .interest-btn {
    padding: 0.75rem 1.5rem;
    font-size: 14px;
    font-weight: 500;
    color: var(--neutral-100);
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: "Roboto", sans-serif;
  }

  .interest-btn:hover {
    border-color: rgba(255, 255, 255, 0.5);
    background: rgba(255, 255, 255, 0.05);
  }

  .interest-btn.selected {
    background: var(--neutral-100);
    color: var(--neutral-800);
    border-color: var(--neutral-100);
  }

  .btn-submit {
    width: 80%;
    padding: 0.875rem 1.75rem;
    font-size: 16px;
    font-weight: 500;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
    background: #00C19F;
    color: #1A1A1A;
    margin: 1rem auto 0 auto;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .btn-submit:hover {
    background: #00A585;
    transform: translateY(-2px);
  }

  .btn-submit :global(.icon) {
    width: 20px;
    height: 20px;
  }

  /* Footer Embedded */
  .footer-embedded {
    position: relative;
    margin-top: 100px;
    border-radius: 24px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    background-image: url("/images/footer.jpg");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .footer-embedded::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    background-size: cover;
  }

  .footer-content {
    position: relative;
    z-index: 1;
    padding: 60px;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-main-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr) auto;
    gap: 2rem;
    align-items: start;
    width: 100%;
  }

  .footer-logo-container {
    display: flex;
    justify-content: flex-end;
    align-items: flex-start;
  }

  .footer-logo {
    width: auto;
    max-width: 200px;
    height: auto;
  }

  .footer-column {
    display: flex;
    flex-direction: column;
  }

  .footer-column-title {
    color: var(--neutral-100);
    font-size: 14px;
    font-weight: 700;
    margin-bottom: 1rem;
    margin-top: 0;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-links a {
    color: var(--neutral-100);
    font-size: 13px;
    font-weight: 400;
    text-decoration: none;
    opacity: 0.8;
    transition: all 0.3s ease;
  }

  .footer-links a:hover {
    opacity: 1;
    color: var(--light-green-400);
  }

  .footer-social {
    display: flex;
    gap: 0.75rem;
    justify-content: flex-end;
    align-items: center;
  }

  .social-link {
    width: 36px;
    height: 36px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--neutral-100);
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .social-link:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: var(--light-green-400);
    color: var(--light-green-400);
    transform: translateY(-2px);
  }

  .footer-bottom {
    position: relative;
    z-index: 1;
    padding: 2rem 60px;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    text-align: center;
  }

  .footer-legal {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    font-size: 11px;
    justify-content: center;
  }

  .footer-legal a {
    color: var(--neutral-100);
    text-decoration: none;
    opacity: 0.6;
    transition: opacity 0.3s ease;
  }

  .footer-legal a:hover {
    opacity: 1;
  }

  .footer-legal a:not(:last-child)::after {
    content: "â€¢";
    margin-left: 0.5rem;
    opacity: 0.5;
  }

  .footer-copyright {
    font-size: 11px;
    color: var(--neutral-100);
    opacity: 0.6;
    margin: 0;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .contact-container {
      padding: 0 60px 60px 60px;
    }

    .contact-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .contact-title {
      font-size: 42px;
    }

    .footer-embedded {
      margin-top: 80px;
    }

    .footer-content {
      padding: 40px;
      gap: 2rem;
    }

    .footer-main-grid {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }

    .footer-logo-container {
      justify-content: center;
      order: -1;
    }

    .footer-column {
      text-align: center;
    }

    .footer-social {
      justify-content: center;
    }

    .footer-bottom {
      padding: 2rem 40px;
    }
  }

  @media (max-width: 768px) {
    .contact-section {
      padding: 60px 0 0 0;
    }

    .contact-container {
      padding: 0 2rem 60px 2rem;
    }

    .contact-title {
      font-size: 36px;
      line-height: 1.2;
    }

    .contact-intro-title,
    .contact-intro-text,
    .form-label {
      line-height: 1.2;
    }

    .footer-embedded {
      margin-top: 60px;
    }

    .footer-content {
      padding: 30px;
      gap: 2rem;
    }

    .footer-main-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-logo-container {
      justify-content: center;
      order: -1;
    }

    .footer-logo {
      max-width: 150px;
    }

    .footer-column {
      text-align: center;
    }

    .footer-social {
      justify-content: center;
    }

    .footer-bottom {
      padding: 1.5rem 30px;
    }

    .footer-legal {
      justify-content: center;
      text-align: center;
    }
  }
</style>

<script>
  (function () {
    const form = document.getElementById("contact-form");
    const wrapper = document.getElementById("contact-form-wrapper");
    const successEl = document.getElementById("submit-success");
    if (!form || !wrapper || !successEl) return;

    const inputIds = ["name", "organization", "email", "country", "phone"];
    const inputs = inputIds
      .map((id) => document.getElementById(id))
      .filter((el): el is HTMLInputElement => el != null);
    const interestGroup = document.getElementById("interest-group");
    const interestButtons = document.querySelectorAll(".interest-btn");
    const termsCheckbox = document.getElementById("terms");
    const termsGroup = termsCheckbox?.closest(".form-group-terms");
    const submitBtn = document.getElementById("submit-btn");

    const touchedInputs = new Set<HTMLInputElement>();

    function getValues() {
      const values = Object.fromEntries(
        inputs.map((el) => [el.id, el.value.trim()])
      );
      const hasInterest = Array.from(interestButtons).some((b) =>
        b.classList.contains("selected")
      );
      const termsAccepted = termsCheckbox ? (termsCheckbox as HTMLInputElement).checked : false;
      return { values, hasInterest, termsAccepted };
    }

    function validate() {
      const { values, hasInterest, termsAccepted } = getValues();
      const allFilled = inputIds.every((id) => (values[id] ?? "").length > 0);
      return Boolean(allFilled && hasInterest && termsAccepted);
    }

    function updateUI() {
      const { values, hasInterest, termsAccepted } = getValues();
      const valid = validate();

      inputs.forEach((el) => {
        const input = el as HTMLInputElement;
        const id = input.id;
        const filled = (values[id] ?? "").length > 0;
        const isTextLike = /^(text|email|tel)$/i.test(input.type || "text");
        const showError = !filled && (!isTextLike || touchedInputs.has(input));
        input.classList.toggle("error", showError);
      });
      if (submitBtn) (submitBtn as HTMLButtonElement).disabled = !valid;
    }

    interestButtons.forEach((button) => {
      button.addEventListener("click", () => {
        button.classList.toggle("selected");
        updateUI();
      });
    });

    inputs.forEach((el) => {
      const input = el as HTMLInputElement;
      input.addEventListener("input", updateUI);
      input.addEventListener("change", updateUI);
      input.addEventListener("blur", () => {
        touchedInputs.add(input);
        updateUI();
      });
    });
    termsCheckbox?.addEventListener("change", updateUI);

    form.addEventListener("submit", (e) => {
      e.preventDefault();
      updateUI();
      if (!validate()) return;
      wrapper.setAttribute("data-hidden", "true");
      successEl.removeAttribute("hidden");
      successEl.setAttribute("data-visible", "true");
    });

    updateUI();
  })();
</script>
