---
import Footer from "./Footer.astro";
import HubSpotForm from "./HubSpotForm.astro";
import { getT } from '../i18n';
import type { Locale } from '../i18n';
import es from '../i18n/es.json';
import en from '../i18n/en.json';
import pt from '../i18n/pt.json';

interface Props {
  lang?: Locale;
}

const { lang = 'es' } = Astro.props;
const dict = lang === 'en' ? en : lang === 'pt' ? pt : es;
const t = getT(dict);
---

<section class="contact-section">
  <div class="contact-background">
    <img src="/images/footer_bg.jpg" alt="" class="contact-bg-img" />
    <div class="contact-bg-overlay"></div>
  </div>

  <div class="contact-container">
    <div class="contact-content">
      <div class="contact-left">
        <h2 class="contact-title">
          {t('contactSection.titleLine1')}<br />
          {t('contactSection.titleLine2')}
        </h2>
        <div class="contact-intro">
          <p class="contact-intro-title">{t('contactSection.introTitle')}</p>
          <p class="contact-intro-text">
            {t('contactSection.introText')}
          </p>
        </div>
      </div>

      <div class="contact-right">
        <HubSpotForm class="contact-hubspot-form" lang={lang} />
      </div>
    </div>
      
    <!-- Footer Component -->
    <Footer lang={lang} />
  </div>
</section>

<style>
  .contact-section {
    position: relative;
    width: 100%;
    padding: 80px 0 0 0;
    overflow: hidden;
  }

  .contact-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .contact-bg-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .contact-bg-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .contact-container {
    position: relative;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 100px;
    z-index: 1;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    margin-bottom: 80px;
  }

  .contact-left {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .contact-title {
    color: var(--neutral-100);
    font-size: 56px;
    font-weight: 700;
    line-height: 1.2;
  }

  .contact-intro {
    color: var(--neutral-100);
  }

  .contact-intro-title {
    font-size: 24px;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .contact-intro-text {
    font-size: 16px;
    font-weight: 400;
    line-height: 20px;
    opacity: 0.9;
  }

  .contact-right {
    /* Formulario HubSpot en HubSpotForm.astro */
  }

  /* Footer Embedded */
  .footer-embedded {
    position: relative;
    margin-top: 100px;
    border-radius: 24px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    background-image: url("/images/footer.jpg");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .footer-embedded::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    background-size: cover;
  }

  .footer-content {
    position: relative;
    z-index: 1;
    padding: 60px;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-main-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr) auto;
    gap: 2rem;
    align-items: start;
    width: 100%;
  }

  .footer-logo-container {
    display: flex;
    justify-content: flex-end;
    align-items: flex-start;
  }

  .footer-logo {
    width: auto;
    max-width: 200px;
    height: auto;
  }

  .footer-column {
    display: flex;
    flex-direction: column;
  }

  .footer-column-title {
    color: var(--neutral-100);
    font-size: 14px;
    font-weight: 700;
    margin-bottom: 1rem;
    margin-top: 0;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-links a {
    color: var(--neutral-100);
    font-size: 13px;
    font-weight: 400;
    text-decoration: none;
    opacity: 0.8;
    transition: all 0.3s ease;
  }

  .footer-links a:hover {
    opacity: 1;
    color: var(--light-green-400);
  }

  .footer-social {
    display: flex;
    gap: 0.75rem;
    justify-content: flex-end;
    align-items: center;
  }

  .social-link {
    width: 36px;
    height: 36px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--neutral-100);
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .social-link:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: var(--light-green-400);
    color: var(--light-green-400);
    transform: translateY(-2px);
  }

  .footer-bottom {
    position: relative;
    z-index: 1;
    padding: 2rem 60px;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    text-align: center;
  }

  .footer-legal {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    font-size: 11px;
    justify-content: center;
  }

  .footer-legal a {
    color: var(--neutral-100);
    text-decoration: none;
    opacity: 0.6;
    transition: opacity 0.3s ease;
  }

  .footer-legal a:hover {
    opacity: 1;
  }

  .footer-legal a:not(:last-child)::after {
    content: "â€¢";
    margin-left: 0.5rem;
    opacity: 0.5;
  }

  .footer-copyright {
    font-size: 11px;
    color: var(--neutral-100);
    opacity: 0.6;
    margin: 0;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .contact-container {
      padding: 0 60px 60px 60px;
    }

    .contact-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .contact-title {
      font-size: 42px;
    }

    .footer-embedded {
      margin-top: 80px;
    }

    .footer-content {
      padding: 40px;
      gap: 2rem;
    }

    .footer-main-grid {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }

    .footer-logo-container {
      justify-content: center;
      order: -1;
    }

    .footer-column {
      text-align: center;
    }

    .footer-social {
      justify-content: center;
    }

    .footer-bottom {
      padding: 2rem 40px;
    }
  }

  @media (max-width: 768px) {
    .contact-section {
      padding: 60px 0 0 0;
    }

    .contact-container {
      padding: 0 2rem 60px 2rem;
    }

    .contact-title {
      font-size: 36px;
      line-height: 1.2;
    }

    .contact-intro-title,
    .contact-intro-text {
      line-height: 1.2;
    }

    .footer-embedded {
      margin-top: 60px;
    }

    .footer-content {
      padding: 30px;
      gap: 2rem;
    }

    .footer-main-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-logo-container {
      justify-content: center;
      order: -1;
    }

    .footer-logo {
      max-width: 150px;
    }

    .footer-column {
      text-align: center;
    }

    .footer-social {
      justify-content: center;
    }

    .footer-bottom {
      padding: 1.5rem 30px;
    }

    .footer-legal {
      justify-content: center;
      text-align: center;
    }
  }
</style>
