---
interface Props {
  name: string;
  size?: number;
  class?: string;
  style?: 'outlined' | 'filled' | 'rounded' | 'sharp' | 'two-tone';
}

const { name, size = 24, class: className = '', style = 'outlined' } = Astro.props;

const iconClass = style === 'outlined' ? 'material-symbols-outlined' : 'material-icons';
---

<span 
  class={`icon ${iconClass} ${className}`}
  style={`font-size: ${size}px;`}
  aria-hidden="true"
>
  {name}
</span>

<style>
  .icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    user-select: none;
    vertical-align: middle;
    line-height: 1;
  }

  .material-symbols-outlined {
    font-variation-settings:
      'FILL' 0,
      'wght' 400,
      'GRAD' 0,
      'opsz' 24;
  }
</style>

