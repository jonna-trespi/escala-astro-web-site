    class="hs-form-html"
    data-region="na1"
    data-form-id={formId}
    data-portal-id={portalId}
  ></div>
</div>

<script src={`https://js.hsforms.net/forms/embed/developer/${portalId}.js`} defer></script>
<script define:vars={{ labelTranslations, checkboxLabelTranslations, submitButtonText, submittedMessageText }}>
  (function () {
    const wrapper = document.querySelector('.hubspot-form-wrapper');
    if (!wrapper) return;
    const lang = (wrapper.getAttribute('data-lang') || 'es').toLowerCase();
    const langAttr = lang === 'es' ? 'es' : lang === 'pt' ? 'pt' : 'en';

    function applySubmittedMessage() {
      const msg = wrapper.querySelector('.submitted-message, [class*="submitted"], [class*="Submitted"]');
      if (msg && submittedMessageText[lang] && msg.textContent !== submittedMessageText[lang]) {
        msg.textContent = submittedMessageText[lang];
        return true;
      }
      return false;
    }

    function applySubmitButtonText() {
      const btn = wrapper.querySelector('button[type="submit"], input[type="submit"], .hsfc-Button');
      if (btn && submitButtonText[lang]) {
        if (btn.tagName === 'INPUT') btn.setAttribute('value', submitButtonText[lang]);
        else btn.textContent = submitButtonText[lang];
        return true;
      }
      return false;
    }

    function getTranslation(labelText) {
      const key = labelText.trim();
      const t = labelTranslations[key] || labelTranslations[key.replace(/\*$/, '')];
      if (t && t[lang]) return t[lang];
      return key;
    }

    function getCheckboxTranslation(text) {
      const key = text.trim();
      const t = checkboxLabelTranslations[key];
      if (t && t[lang]) return t[lang];
      return key;
    }

    /** Traduce labels de checkboxes, radios y títulos de grupo (términos, temas de interés) y corrige lang. */
    function applyCheckboxAndRadioLabels() {
      const form = wrapper.querySelector('form');
      if (!form) return false;
      const labels = form.querySelectorAll('label[id$="-label"], label.hsfc-FieldLabel, .hs-form-field label, .hsfc-CheckboxFieldGroup_Options label, .hsfc-CheckboxFieldGroup label, [data-hsfc-id="CheckboxFieldGroup"] label');
      let applied = 0;
      labels.forEach(function (label) {
        const span = label.querySelector('span');
        const rawText = (span ? span.textContent : label.textContent) || '';
        const text = rawText.trim();
        if (!text) return;
        const translated = getCheckboxTranslation(text);
        if (translated === text) return;
        if (span) span.textContent = translated;
        else label.textContent = translated;
        label.setAttribute('lang', langAttr);
        applied++;
      });
      return applied > 0;
    }

    function applyPlaceholdersAndHideLabels() {
      const form = wrapper.querySelector('form');
      if (!form) return false;
      const labels = form.querySelectorAll('label[id$="-label"], label.hsfc-FieldLabel, .hs-form-field label');
      if (labels.length === 0) return false;
      let applied = 0;
      labels.forEach(function (label) {
        const span = label.querySelector('span');
        const rawText = (span ? span.textContent : label.textContent) || '';
        const text = rawText.trim();
        if (!text) return;
        const forId = label.getAttribute('for');
        const input = forId ? form.querySelector('#' + CSS.escape(forId)) : label.nextElementSibling;
        if (!input) return;
        var type = (input.type || '').toLowerCase();
        var isCheckboxOrRadio = input.tagName === 'INPUT' && (type === 'checkbox' || type === 'radio');
        if (isCheckboxOrRadio) return;
        if (input.tagName === 'INPUT' || input.tagName === 'SELECT' || input.tagName === 'TEXTAREA') {
          const translated = getTranslation(text);
          input.setAttribute('placeholder', translated);
          if (span) span.textContent = translated;
          else label.textContent = translated;
          label.classList.add('hubspot-label-as-placeholder');
          applied++;
        }
      });
      if (applied > 0) wrapper.classList.add('hubspot-labels-as-placeholders');
      return applied > 0;
    }

    function onFormReady() {
      var labelsDone = applyPlaceholdersAndHideLabels();
      var checkboxDone = applyCheckboxAndRadioLabels();
      var btnDone = applySubmitButtonText();
      return labelsDone || checkboxDone || btnDone;
    }
    var observer = new MutationObserver(function () {
      if (onFormReady()) observer.disconnect();
    });
    observer.observe(wrapper, { childList: true, subtree: true });
    if (onFormReady()) observer.disconnect();
    else setTimeout(function () {
      onFormReady();
      applyCheckboxAndRadioLabels();
      applySubmitButtonText();
    }, 2000);
    setTimeout(function () { applyCheckboxAndRadioLabels(); }, 3500);
    var successCheck = setInterval(function () {
      if (applySubmittedMessage()) clearInterval(successCheck);
    }, 1500);
  })();
</script>

