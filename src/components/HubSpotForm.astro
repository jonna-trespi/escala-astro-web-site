/**
 * HubSpot Form Embed
 *
 * Contenedor donde HubSpot inyecta el formulario (script externo).
 * Data attributes: data-region, data-form-id, data-portal-id.
 *
 * Clases que usa HubSpot (para estilizar el formulario inyectado):
 * - .hs-form-html          → contenedor raíz del form
 * - .hs-form-field          → cada campo (margin-bottom)
 * - .hs-form-html label     → etiquetas (en el HTML se ocultan con display: none)
 * - .hs-form-html input[type="text|email|tel"], select, textarea
 * - .hs-form-html .hs-error-msgs, .hs-error-msgs li
 * - .hs-form-html .hs-form-checkbox-display, .hs-form-radio-display
 * - .hs-form-html input[type="submit"], .hs-button
 * - .hs-form-html .submitted-message
 */
interface Props {
  /** Clase adicional en el wrapper (ej. para ajustar al diseño de la sección) */
  class?: string;
  /** Idioma de la página (es, en, pt) para traducir labels y placeholders */
  lang?: 'es' | 'en' | 'pt';
}

const { class: className = '', lang = 'es' } = Astro.props;

